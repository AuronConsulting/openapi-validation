{
    "name": "auron-consulting/openapi-validation",
    "description": "PSR-7 and 15 request/response validation off OpenApi v2/3 specs",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Pabon",
            "email": "luis.pabon@auronconsulting.co.uk"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "johnkary/phpunit-speedtrap": "^2.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "AuronConsulting\\OpenApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AuronConsulting\\OpenApi\\Tests\\Unit\\": "tests/unit/",
            "AuronConsulting\\OpenApi\\Tests\\Functional\\": "tests/functional/"
        }
    }
}
